<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss} %-5level %-24logger{24} | %msg%n</pattern>
    </encoder>
  </appender>
  <root level="${LOGGING_LEVEL:-INFO}">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
